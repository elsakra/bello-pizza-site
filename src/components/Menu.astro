<section id="menu" class="bg-warm-gray section-padding">
  <div class="container-custom">
    <div class="text-center mb-16">
      <h2 class="text-4xl md:text-5xl font-bold mb-6 text-gray-800">
        Our Menu
      </h2>
      <div class="w-24 h-1 bg-brand-red mx-auto mb-6"></div>
      <p class="text-xl text-gray-600 max-w-3xl mx-auto">
        Authentic Neapolitan-style pizzas and Italian specialties made fresh at your event
      </p>
    </div>
    
    <!-- Pricing Packages -->
    <div class="bg-white p-8 rounded-lg shadow-sm mb-16">
      <h3 class="text-3xl font-bold text-gray-800 mb-8 text-center">Catering Packages</h3>
      <div class="grid md:grid-cols-3 gap-8">
        <div class="text-center p-6 border-2 border-gray-200 rounded-lg">
          <h4 class="text-2xl font-bold text-gray-800 mb-2">Basic Package</h4>
          <p class="text-3xl font-bold text-brand-red mb-4">$18<span class="text-lg text-gray-600">/person</span></p>
          <p class="text-gray-600 mb-4">Minimum 25 people</p>
          <ul class="text-left text-gray-700 space-y-2">
            <li>• 3 Pizza varieties</li>
            <li>• Caesar salad</li>
            <li>• Setup & service</li>
            <li>• 2-hour service</li>
          </ul>
        </div>
        
        <div class="text-center p-6 border-2 border-brand-red rounded-lg relative">
          <div class="absolute -top-3 left-1/2 transform -translate-x-1/2 bg-brand-red text-white px-4 py-1 rounded-full text-sm font-medium">Most Popular</div>
          <h4 class="text-2xl font-bold text-gray-800 mb-2">Premium Package</h4>
          <p class="text-3xl font-bold text-brand-red mb-4">$25<span class="text-lg text-gray-600">/person</span></p>
          <p class="text-gray-600 mb-4">Minimum 25 people</p>
          <ul class="text-left text-gray-700 space-y-2">
            <li>• 5 Pizza varieties</li>
            <li>• Caesar & arugula salads</li>
            <li>• Garlic bread</li>
            <li>• Italian meatballs</li>
            <li>• Setup & service</li>
            <li>• 3-hour service</li>
          </ul>
        </div>
        
        <div class="text-center p-6 border-2 border-gray-200 rounded-lg">
          <h4 class="text-2xl font-bold text-gray-800 mb-2">Deluxe Package</h4>
          <p class="text-3xl font-bold text-brand-red mb-4">$32<span class="text-lg text-gray-600">/person</span></p>
          <p class="text-gray-600 mb-4">Minimum 25 people</p>
          <ul class="text-left text-gray-700 space-y-2">
            <li>• Unlimited pizza varieties</li>
            <li>• Full salad bar</li>
            <li>• Appetizer selection</li>
            <li>• Pasta station</li>
            <li>• Wings & meatballs</li>
            <li>• Setup & service</li>
            <li>• 4-hour service</li>
          </ul>
        </div>
      </div>
      <p class="text-center text-gray-600 mt-6">*Travel fees may apply for events outside 25-mile radius. Weekend premium rates apply.</p>
    </div>
    
    <!-- Our Signature Pizzas -->
    <div class="mb-16">
      <h3 class="text-3xl font-bold text-gray-800 mb-8 text-center">Our Signature Pizzas</h3>
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
        <div class="bg-white p-6 rounded-lg shadow-sm">
          <img 
            src="https://res.cloudinary.com/dil14r8je/image/upload/v1768286927/auto-site-builder/Bello%20Pizza/image_3.jpg" 
            alt="Margherita Pizza" 
            class="w-full h-48 object-cover rounded-lg mb-4"
          />
          <h4 class="text-xl font-semibold text-gray-800 mb-2">Classic Margherita</h4>
          <p class="text-gray-600">San Marzano tomatoes, fresh mozzarella, basil, extra virgin olive oil</p>
        </div>
        
        <div class="bg-white p-6 rounded-lg shadow-sm">
          <img 
            src="https://res.cloudinary.com/dil14r8je/image/upload/v1768286927/auto-site-builder/Bello%20Pizza/image_4.jpg" 
            alt="Pepperoni Pizza" 
            class="w-full h-48 object-cover rounded-lg mb-4"
          />
          <h4 class="text-xl font-semibold text-gray-800 mb-2">Pepperoni Classico</h4>
          <p class="text-gray-600">Premium pepperoni, mozzarella, tomato sauce, oregano</p>
        </div>
        
        <div class="bg-white p-6 rounded-lg shadow-sm">
          <img 
            src="https://res.cloudinary.com/dil14r8je/image/upload/v1768286932/auto-site-builder/Bello%20Pizza/image_2.jpg" 
            alt="Quattro Formaggi Pizza" 
            class="w-full h-48 object-cover rounded-lg mb-4"
          />
          <h4 class="text-xl font-semibold text-gray-800 mb-2">Quattro Formaggi</h4>
          <p class="text-gray-600">Mozzarella, gorgonzola, parmesan, ricotta, white sauce</p>
        </div>
        
        <div class="bg-white p-6 rounded-lg shadow-sm">
          <img 
            src="https://res.cloudinary.com/dil14r8je/image/upload/v1768286927/auto-site-builder/Bello%20Pizza/image_3.jpg" 
            alt="Prosciutto Arugula Pizza" 
            class="w-full h-48 object-cover rounded-lg mb-4"
          />
          <h4 class="text-xl font-semibold text-gray-800 mb-2">Prosciutto & Arugula</h4>
          <p class="text-gray-600">Prosciutto di Parma, fresh arugula, cherry tomatoes, parmesan</p>
        </div>
        
        <div class="bg-white p-6 rounded-lg shadow-sm">
          <img 
            src="https://res.cloudinary.com/dil14r8je/image/upload/v1768286927/auto-site-builder/Bello%20Pizza/image_4.jpg" 
            alt="BBQ Chicken Pizza" 
            class="w-full h-48 object-cover rounded-lg mb-4"
          />
          <h4 class="text-xl font-semibold text-gray-800 mb-2">BBQ Chicken</h4>
          <p class="text-gray-600">Grilled chicken, BBQ sauce, red onions, mozzarella, cilantro</p>
        </div>
        
        <div class="bg-white p-6 rounded-lg shadow-sm">
          <img 
            src="https://res.cloudinary.com/dil14r8je/image/upload/v1768286932/auto-site-builder/Bello%20Pizza/image_2.jpg" 
            alt="Vegetarian Pizza" 
            class="w-full h-48 object-cover rounded-lg mb-4"
          />
          <h4 class="text-xl font-semibold text-gray-800 mb-2">Vegetarian Delight</h4>
          <p class="text-gray-600">Bell peppers, mushrooms, olives, red onions, tomatoes, mozzarella</p>
        </div>
      </div>
    </div>
    
    <!-- Additional Menu Items -->
    <div class="grid md:grid-cols-2 gap-12 mb-16">
      <div class="bg-white p-8 rounded-lg shadow-sm">
        <h3 class="text-2xl font-bold text-gray-800 mb-6">Appetizers & Sides</h3>
        <ul class="space-y-3 text-gray-700">
          <li class="flex justify-between">
            <span>Italian Meatballs (6)</span>
            <span class="font-medium">$12</span>
          </li>
          <li class="flex justify-between">
            <span>Caesar Salad</span>
            <span class="font-medium">$8</span>
          </li>
          <li class="flex justify-between">
            <span>Arugula Salad</span>
            <span class="font-medium">$9</span>
          </li>
          <li class="flex justify-between">
            <span>Garlic Bread</span>
            <span class="font-medium">$6</span>
          </li>
          <li class="flex justify-between">
            <span>Buffalo Wings (8)</span>
            <span class="font-medium">$14</span>
          </li>
          <li class="flex justify-between">
            <span>Bruschetta (4)</span>
            <span class="font-medium">$10</span>
          </li>
        </ul>
      </div>
      
      <div class="bg-white p-8 rounded-lg shadow-sm">
        <h3 class="text-2xl font-bold text-gray-800 mb-6">Pasta & Specialties</h3>
        <ul class="space-y-3 text-gray-700">
          <li class="flex justify-between">
            <span>Penne Arrabbiata</span>
            <span class="font-medium">$15</span>
          </li>
          <li class="flex justify-between">
            <span>Spaghetti & Meatballs</span>
            <span class="font-medium">$16</span>
          </li>
          <li class="flex justify-between">
            <span>Fettuccine Alfredo</span>
            <span class="font-medium">$14</span>
          </li>
          <li class="flex justify-between">
            <span>Lasagna (slice)</span>
            <span class="font-medium">$12</span>
          </li>
          <li class="flex justify-between">
            <span>Tiramisu</span>
            <span class="font-medium">$8</span>
          </li>
          <li class="flex justify-between">
            <span>Gelato (scoop)</span>
            <span class="font-medium">$5</span>
          </li>
        </ul>
      </div>
    </div>
    
    <!-- Call to Action -->
    <div class="text-center bg-black text-white p-12 rounded-lg">
      <h3 class="text-3xl font-bold mb-4">Ready to Book Your Event?</h3>
      <p class="text-xl mb-8 opacity-90">
        Contact us today to customize your menu and get a personalized quote
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a href="#contact" class="btn-secondary text-lg px-8 py-4">
          Request Catering Quote
        </a>
        <a href="tel:(313) 914-9040" class="border-2 border-white text-white px-8 py-4 uppercase font-medium tracking-wide hover:bg-white hover:text-black transition-colors duration-300">
          Call (313) 914-9040
        </a>
      </div>
    </div>
  </div>
</section>