<section id="menu" class="bg-warm-gray section-padding">
  <div class="container-custom">
    <div class="text-center mb-16">
      <h2 class="text-4xl md:text-5xl font-bold mb-6 text-gray-800">
        Our Menu
      </h2>
      <div class="w-24 h-1 bg-brand-red mx-auto mb-6"></div>
      <p class="text-xl text-gray-600 max-w-3xl mx-auto">
        Authentic Neapolitan-style pizzas and Italian specialties made fresh at your event
      </p>
    </div>
    
    <!-- Pricing Packages -->
    <div class="bg-white p-8 rounded-lg shadow-sm mb-16">
      <h3 class="text-3xl font-bold text-gray-800 mb-8 text-center">Catering Packages</h3>
      <div class="grid md:grid-cols-3 gap-8">
        <div class="text-center p-6 border-2 border-gray-200 rounded-lg">
          <h4 class="text-2xl font-bold text-gray-800 mb-2">Basic Package</h4>
          <p class="text-3xl font-bold text-brand-red mb-4">$18<span class="text-lg text-gray-600">/person</span></p>
          <p class="text-gray-600 mb-4">Minimum 25 people</p>
          <ul class="text-left text-gray-700 space-y-2">
            <li>• 3 Pizza varieties</li>
            <li>• Caesar salad</li>
            <li>• Setup & service</li>
            <li>• 2-hour service</li>
          </ul>
        </div>
        
        <div class="text-center p-6 border-2 border-brand-red rounded-lg relative">
          <div class="absolute -top-3 left-1/2 transform -translate-x-1/2 bg-brand-red text-white px-4 py-1 rounded-full text-sm font-medium">Most Popular</div>
          <h4 class="text-2xl font-bold text-gray-800 mb-2">Premium Package</h4>
          <p class="text-3xl font-bold text-brand-red mb-4">$25<span class="text-lg text-gray-600">/person</span></p>
          <p class="text-gray-600 mb-4">Minimum 25 people</p>
          <ul class="text-left text-gray-700 space-y-2">
            <li>• 5 Pizza varieties</li>
            <li>• Caesar & arugula salads</li>
            <li>• Garlic bread</li>
            <li>• Italian meatballs</li>
            <li>• Setup & service</li>
            <li>• 3-hour service</li>
          </ul>
        </div>
        
        <div class="text-center p-6 border-2 border-gray-200 rounded-lg">
          <h4 class="text-2xl font-bold text-gray-800 mb-2">Deluxe Package</h4>
          <p class="text-3xl font-bold text-brand-red mb-4">$32<span class="text-lg text-gray-600">/person</span></p>
          <p class="text-gray-600 mb-4">Minimum 25 people</p>
          <ul class="text-left text-gray-700 space-y-2">
            <li>• Unlimited pizza varieties</li>
            <li>• Full salad bar</li>
            <li>• Appetizer selection</li>
            <li>• Pasta station</li>
            <li>• Wings & meatballs</li>
            <li>• Setup & service</li>
            <li>• 4-hour service</li>
          </ul>
        </div>
      </div>
      <p class="text-center text-gray-600 mt-6">*Travel fees may apply for events outside 25-mile radius. Weekend premium rates apply.</p>
    </div>
    
    <!-- Pizza Menu -->
    <div class="mb-16">
      <h3 class="text-3xl font-bold text-gray-800 mb-8 text-center">Wood-Fired Pizzas</h3>
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
        <div class="bg-white p-6 rounded-lg shadow-sm">
          <h4 class="text-xl font-semibold text-gray-800 mb-2">Margherita</h4>
          <p class="text-gray-600 mb-3">Fresh mozzarella, San Marzano tomatoes, basil, extra virgin olive oil</p>
          <p class="text-brand-red font-bold text-lg">$16</p>
        </div>
        
        <div class="bg-white p-6 rounded-lg shadow-sm">
          <h4 class="text-xl font-semibold text-gray-800 mb-2">Pepperoni Classic</h4>
          <p class="text-gray-600 mb-3">Premium pepperoni, mozzarella, tomato sauce</p>
          <p class="text-brand-red font-bold text-lg">$18</p>
        </div>
        
        <div class="bg-white p-6 rounded-lg shadow-sm">
          <h4 class="text-xl font-semibold text-gray-800 mb-2">Prosciutto & Arugula</h4>
          <p class="text-gray-600 mb-3">Prosciutto di Parma, arugula, mozzarella, cherry tomatoes</p>
          <p class="text-brand-red font-bold text-lg">$22</p>
        </div>
        
        <div class="bg-white p-6 rounded-lg shadow-sm">
          <h4 class="text-xl font-semibold text-gray-800 mb-2">Quattro Stagioni</h4>
          <p class="text-gray-600 mb-3">Artichokes, mushrooms, olives, ham, mozzarella</p>
          <p class="text-brand-red font-bold text-lg">$20</p>
        </div>
        
        <div class="bg-white p-6 rounded-lg shadow-sm">
          <h4 class="text-xl font-semibold text-gray-800 mb-2">Veggie Supreme</h4>
          <p class="text-gray-600 mb-3">Bell peppers, mushrooms, red onions, olives, fresh basil</p>
          <p class="text-brand-red font-bold text-lg">$19</p>
        </div>
        
        <div class="bg-white p-6 rounded-lg shadow-sm">
          <h4 class="text-xl font-semibold text-gray-800 mb-2">Meat Lovers</h4>
          <p class="text-gray-600 mb-3">Pepperoni, Italian sausage, ham, bacon, mozzarella</p>
          <p class="text-brand-red font-bold text-lg">$24</p>
        </div>
      </div>
    </div>
    
    <!-- Other Menu Items -->
    <div class="grid md:grid-cols-2 gap-12">
      <!-- Appetizers & Sides -->
      <div>
        <h3 class="text-2xl font-bold text-gray-800 mb-6">Appetizers & Sides</h3>
        <div class="space-y-4">
          <div class="flex justify-between items-start bg-white p-4 rounded-lg shadow-sm">
            <div>
              <h4 class="font-semibold text-gray-800">Italian Meatballs</h4>
              <p class="text-gray-600 text-sm">Homemade beef & pork meatballs in marinara</p>
            </div>
            <span class="text-brand-red font-bold">$12</span>
          </div>
          
          <div class="flex justify-between items-start bg-white p-4 rounded-lg shadow-sm">
            <div>
              <h4 class="font-semibold text-gray-800">Garlic Bread</h4>
              <p class="text-gray-600 text-sm">Wood-fired garlic bread with herbs</p>
            </div>
            <span class="text-brand-red font-bold">$8</span>
          </div>
          
          <div class="flex justify-between items-start bg-white p-4 rounded-lg shadow-sm">
            <div>
              <h4 class="font-semibold text-gray-800">Caesar Salad</h4>
              <p class="text-gray-600 text-sm">Romaine, parmesan, croutons, classic dressing</p>
            </div>
            <span class="text-brand-red font-bold">$10</span>
          </div>
          
          <div class="flex justify-between items-start bg-white p-4 rounded-lg shadow-sm">
            <div>
              <h4 class="font-semibold text-gray-800">Buffalo Wings</h4>
              <p class="text-gray-600 text-sm">Crispy wings with buffalo or BBQ sauce</p>
            </div>
            <span class="text-brand-red font-bold">$14</span>
          </div>
        </div>
      </div>
      
      <!-- Pasta & Mains -->
      <div>
        <h3 class="text-2xl font-bold text-gray-800 mb-6">Pasta & Mains</h3>
        <div class="space-y-4">
          <div class="flex justify-between items-start bg-white p-4 rounded-lg shadow-sm">
            <div>
              <h4 class="font-semibold text-gray-800">Penne Arrabbiata</h4>
              <p class="text-gray-600 text-sm">Spicy tomato sauce with garlic and red peppers</p>
            </div>
            <span class="text-brand-red font-bold">$16</span>
          </div>
          
          <div class="flex justify-between items-start bg-white p-4 rounded-lg shadow-sm">
            <div>
              <h4 class="font-semibold text-gray-800">Fettuccine Alfredo</h4>
              <p class="text-gray-600 text-sm">Creamy parmesan sauce with fresh herbs</p>
            </div>
            <span class="text-brand-red font-bold">$18</span>
          </div>
          
          <div class="flex justify-between items-start bg-white p-4 rounded-lg shadow-sm">
            <div>
              <h4 class="font-semibold text-gray-800">Spaghetti & Meatballs</h4>
              <p class="text-gray-600 text-sm">Classic pasta with homemade meatballs</p>
            </div>
            <span class="text-brand-red font-bold">$20</span>
          </div>
          
          <div class="flex justify-between items-start bg-white p-4 rounded-lg shadow-sm">
            <div>
              <h4 class="font-semibold text-gray-800">Chicken Parmigiana</h4>
              <p class="text-gray-600 text-sm">Breaded chicken with marinara and mozzarella</p>
            </div>
            <span class="text-brand-red font-bold">$24</span>
          </div>
        </div>
      </div>
    </div>
    
    <!-- Custom Options -->
    <div class="mt-16 text-center bg-white p-8 rounded-lg shadow-sm">
      <h3 class="text-2xl font-bold text-gray-800 mb-4">Custom Menu Options</h3>
      <p class="text-gray-600 mb-6 max-w-2xl mx-auto">
        We can customize our menu to accommodate dietary restrictions, preferences, and special requests. Vegetarian, vegan, and gluten-free options available.
      </p>
      <a href="#contact" class="btn-primary">
        Discuss Custom Menu
      </a>
    </div>
  </div>
</section>