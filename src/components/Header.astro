<header class="bg-white shadow-sm sticky top-0 z-50">
  <nav class="container-custom py-4">
    <div class="flex justify-between items-center">
      <a href="/" class="flex-shrink-0">
        <img 
          src="https://res.cloudinary.com/dil14r8je/image/upload/v1768286927/auto-site-builder/Bello%20Pizza/image_0.png" 
          alt="Bello Pizzas" 
          class="h-12 md:h-16 w-auto"
        />
      </a>
      
      <!-- Desktop Navigation -->
      <div class="hidden md:flex items-center space-x-8">
        <a href="/" class="text-gray-700 hover:text-brand-red transition-colors font-medium">Home</a>
        <a href="#catering" class="text-gray-700 hover:text-brand-red transition-colors font-medium">Catering</a>
        <a href="#menu" class="text-gray-700 hover:text-brand-red transition-colors font-medium">Menu</a>
        <a href="#about" class="text-gray-700 hover:text-brand-red transition-colors font-medium">About</a>
        <a href="#contact" class="btn-primary">Request Catering</a>
      </div>
      
      <!-- Mobile Menu Button -->
      <button id="mobile-menu-btn" class="md:hidden p-2">
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
        </svg>
      </button>
    </div>
    
    <!-- Mobile Navigation -->
    <div id="mobile-menu" class="md:hidden hidden pt-4 pb-2">
      <a href="/" class="block py-2 text-gray-700 hover:text-brand-red transition-colors">Home</a>
      <a href="#catering" class="block py-2 text-gray-700 hover:text-brand-red transition-colors">Catering</a>
      <a href="#menu" class="block py-2 text-gray-700 hover:text-brand-red transition-colors">Menu</a>
      <a href="#about" class="block py-2 text-gray-700 hover:text-brand-red transition-colors">About</a>
      <a href="#contact" class="block py-2 text-brand-red hover:text-red-600 transition-colors font-medium">Request Catering</a>
    </div>
  </nav>
</header>

<script>
  document.getElementById('mobile-menu-btn')?.addEventListener('click', function() {
    const menu = document.getElementById('mobile-menu');
    menu?.classList.toggle('hidden');
  });
</script>